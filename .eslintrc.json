{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": ["error", "all"],
        "max-len": ["error", {"code": 1000, "ignoreUrls": true}],
        "indent": ["error", 
            2, 
            {"CallExpression": {"arguments": "first"},
            "ObjectExpression": "first" }
            ]
    }
}
